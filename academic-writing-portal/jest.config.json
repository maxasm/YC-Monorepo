{
  "name": "jest-config",
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "roots": ["<rootDir>"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/?(*.)+(spec|test).ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom": [
    "components/**/*.tsx",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "types/**/*.ts",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ]
}
